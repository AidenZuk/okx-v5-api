{
  "compilerOptions": {
    "module":"ES2022",
    "target": "ES2022",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "allowJs": true,
    "outDir": "dist/",
    "typeRoots": [
      "./node_modules/@types", "./src/types"
    ],
    "types": ["node"]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "ts-node": { "files": true, "esm": true },
  "exclude": ["node_modules"],
  "extends": "@tsconfig/node18/tsconfig.json"
}